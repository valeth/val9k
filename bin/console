#!/usr/bin/env ruby

require "pathname"
ENV["BUNDLE_GEMFILE"] ||= File.expand_path("../Gemfile", __dir__)
libdir = File.join(File.dirname(ENV["BUNDLE_GEMFILE"]), "app")
$LOAD_PATH.unshift(libdir) unless $LOAD_PATH.include?(libdir)

require "bundler/setup"
require "dotenv"
require "val9k"

Dotenv.load

BOT = VAL9K.new

begin
  require "pry"
  Pry.start
rescue LoadError
  require "irb"
  IRB.start(__FILE__)
end
